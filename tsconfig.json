{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "es6"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./lua/core/*"]
    }
  },
  "include": [
    "lua/core/**/*.ts",
    "lua/core/**/*.tsx",
    "lua/core/types.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
